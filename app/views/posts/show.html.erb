<div class="post">
  <h1><%= @post.title %></h1>
  <p><%= @post.text %></p>
  <%= render partial: 'posts/likes/like', locals: { post: @post } %>
  <p>Comments: <%= @post.comments_counter %></p>
</div>

<div class="post-comment">
  <%= render "comments/new" %>
  <p>Likes: <%= @post.likes_counter %></p>
</div>

<ul>
  <% @post.comments.order(created_at: :desc).limit(10).each do |comment| %>
    <li><%= comment.author.name %> : <%= comment.text %></li>
  <% end %>
</ul>

<div class="pandh">
  <%= link_to "Back to Users", users_path, class: "home-link" %>
  <%= link_to "Back to Posts", user_posts_path(user_id: @user.id), class: "back-link" %>
</div>
